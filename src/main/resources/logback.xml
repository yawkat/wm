<configuration>
    <timestamp key="start_time" datePattern="yyyy-MM-dd-HH-mm-ss"/>

    <appender name="file" class="ch.qos.logback.core.FileAppender">
        <file>log/wm-${start_time}.log</file>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%logger{15}] [%-10t] [%-5level]: %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="out" class="ch.qos.logback.core.ConsoleAppender">
        <file>log/wm-${start_time}.log</file>
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%-5level]: %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Log INFO to out, DEBUG to file -->

    <root level="info">
        <appender-ref ref="out"/>
    </root>
    <root level="debug">
        <appender-ref ref="file"/>
    </root>
</configuration>